<div id="<%= dom_id channel %>">
<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
  <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
    <div class="p-6 bg-white border-b border-gray-200">
      <h2 class="text-2xl font-bold mb-4"><%= @channel.name %></h2>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Channel ID</h3>
        <p class="text-gray-700"><%= @channel.yt_channel_id %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Custom URL</h3>
        <p class="text-gray-700">
          <%= link_to @channel.custom_url, "https://youtube.com/#{@channel.custom_url}", target: "_blank", class: "text-blue-500 underline" %>
        </p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Subscriber Count</h3>
        <p class="text-gray-700"><%= @channel.subscriber_count %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Video Count</h3>
        <p class="text-gray-700"><%= @channel.video_count %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">View Count</h3>
        <p class="text-gray-700"><%= @channel.view_count %></p>
      </div>


      <div class="mb-4">
        <h3 class="text-lg font-semibold">Published At</h3>
        <p class="text-gray-700"><%= @channel.published_at %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Created At</h3>
        <p class="text-gray-700"><%= @channel.created_at %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Updated At</h3>
        <p class="text-gray-700"><%= @channel.updated_at %></p>
      </div>

      <div class="mb-4">
        <h3 class="text-lg font-semibold">Description</h3>
        <p class="text-gray-700"><%= @channel.description %></p>
      </div>
    </div>
  </div>
</div>

</div>
