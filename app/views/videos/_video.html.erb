<div id="<%= dom_id(@video) %>">
  <div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="bg-white overflow-hidden shadow-sm sm:rounded-lg">
      <div class="p-6 bg-white border-b border-gray-200">
        <h2 class="text-2xl font-bold mb-4"><%= @video.title %></h2>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Channel</h3>
          <p class="text-gray-700"><%= @video.channel.name %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Video ID</h3>
          <p class="text-gray-700"><%= @video.yt_video_id %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Duration</h3>
          <p class="text-gray-700"><%= @video.duration %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Tags</h3>
          <div class="flex flex-wrap gap-2">
            <% JSON.parse(@video.tags).each do |tag| %>
              <span class="bg-blue-100 text-blue-800 text-sm font-medium mr-2 px-2.5 py-0.5 rounded"><%= tag %></span>
            <% end %>
          </div>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">View Count</h3>
          <p class="text-gray-700"><%= @video.view_count %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Published At</h3>
          <p class="text-gray-700"><%= @video.published_at %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Created At</h3>
          <p class="text-gray-700"><%= @video.created_at %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Updated At</h3>
          <p class="text-gray-700"><%= @video.updated_at %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Comment Count</h3>
          <p class="text-gray-700"><%= @video.comment_count %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Favorite Count</h3>
          <p class="text-gray-700"><%= @video.favorite_count %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Like Count</h3>
          <p class="text-gray-700"><%= @video.like_count %></p>
        </div>

        <div class="mb-4">
          <h3 class="text-lg font-semibold">Description</h3>
          <p class="text-gray-700"><%= @video.description %></p>
        </div>
      </div>
    </div>
  </div>
</div>
